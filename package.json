{
	"name": "obsidian-code-blocks",
	"version": "1.1.1",
	"description": "Language-based code block styling with headers, icons, colors, line numbers, copy buttons, custom CSS, and highlight.js syntax highlighting for Obsidian.",
	"main": "main.js",
	"type": "module",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json"
	},
	"keywords": [
		"obsidian",
		"plugin",
		"code-blocks",
		"syntax-highlighting",
		"highlight.js",
		"code",
		"language"
	],
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^16.11.6",
		"@typescript-eslint/parser": "^8.56.1",
		"esbuild": "0.25.5",
		"eslint": "^9.39.3",
		"eslint-plugin-obsidianmd": "^0.1.9",
		"tslib": "2.4.0",
		"typescript": "^5.8.3"
	},
	"peerDependencies": {
		"@codemirror/state": "*",
		"@codemirror/view": "*"
	},
	"dependencies": {
		"highlight.js": "^11.11.0",
		"obsidian": "latest"
	}
}
